<h1 class= "my-4">New game</h1>
<div class="letters">
  <% @letters.each do |lettre| %>
    <div class="letter"><%= lettre %></div>
  <% end %>
</div>

<h3 class= "my-3">What is the longest word you can find?</h3>
<form class= "input-group" action="/score" method="post" data-turbo="false" >
  <input class = "form-control" type="text" name="word" placeholder="your word">
  <input class="btn btn-primary" type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
